{
  "manifest_version": 3,
  "name": "Аудит резюме (RASHOTKLIK)",
  "version": "1.3.0",
  "description": "Получение резюме с HH.ru, аудит через DeepSeek (VseLLM), сохранение результата локально.",
  "permissions": ["storage", "activeTab", "scripting", "downloads", "tabs"],
  "host_permissions": [
    "https://*.hh.ru/*",
    "https://api.hh.ru/*",
    "https://api.vsellm.ru/*",
    "https://vsellm.ru/*"
  ],
  "action": { "default_popup": "popup/popup.html" },
  "background": { 
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.hh.ru/*"],
      "js": ["scripts/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": { "page": "options/options.html" },
  "web_accessible_resources": [
    { "resources": ["prompts/default-audit.txt"], "matches": ["<all_urls>"] }
  ]
}
